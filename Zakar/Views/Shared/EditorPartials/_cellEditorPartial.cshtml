@using Zakar.Common.Enums
@using Zakar.Controllers.Extensions
@model Zakar.ViewModels.CellViewModel

@Html.HiddenFor(m => m.UniqueId)
<div class="form-group">
    @Html.LabelFor(m => m.Name, new{@class="control-label"})
    @Html.TextBoxFor(m => m.Name, new{@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.PCFId, new{@class="control-label"})
    @Html.Awe().AjaxDropdownFor(m => m.PCFId).Url(Url.Action("GetPCFs","AjaxList")).Parameter("ChurchId", ((Controller)ViewContext.Controller).CurrentChurchAdministered().Result.Id).HtmlAttributes(new{@class="form-control"})
</div>