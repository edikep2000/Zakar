@model Zakar.ViewModels.PartnerViewModel


<div class="form-group">
    @Html.LabelFor(m => m.Title, new{@class="control-label"}) <br/>
    @Html.Awe().AjaxDropdownFor(m => m.Title).Url(Url.Action("GetTitles","AjaxList")).HtmlAttributes(new{@class="form-control"})
    @Html.ValidationMessageFor(m => m.Title)
</div>


<div class="form-group">
    @Html.Label("name","Full Name", new {@class="control-label"})
    <div class="row">
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.FirstName, new{@class="form-control", placeholder = "First Name"})
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
        
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.LastName, new{@class="form-control", placeholder = "Last Name"})
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.Gender, new{@class="control-label"})
    <div class="row">
        <div class="col-md-6">
            @Html.Awe().AjaxDropdownFor(m => m.Gender).Url(Url.Action("GetGender","AjaxList")).HtmlAttributes(new{@class="form-control"})
            @Html.ValidationMessageFor(m => m.Gender)
        </div>
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.Email, new{@class="control-label"})
    <div class="row">
        <div class="col-md-6">
          @Html.TextBoxFor(m => m.Email, new{@class="form-control"})
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.Phone, new{@class="control-label"})
    <div class="row">
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Phone, new{@class="form-control"})
            @Html.ValidationMessageFor(m => m.Phone)
        </div>
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.DateOfBirth, new{@class="control-label"})
    <div class="row">

           @Html.Awe().DatePickerFor(m => m.DateOfBirth).ChangeMonth(true).ChangeYear(true).CssClass("form-control")
            @Html.ValidationMessageFor(m => m.DateOfBirth)

    </div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.PCFId, new{@class="control-label"})
    <div class="row">
        <div class="col-md-6">
            @Html.Awe().LookupFor(m => m.PCFId).GetItemUrl(Url.Action("GetItem","PCFLookup")).SearchUrl(Url.Action("search","PCFLookup")).HtmlAttributes(new{@class="form-control"})
            @Html.ValidationMessageFor(m => m.PCFId)
        </div>
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.CellId, new{@class="control-label"})
    <div class="row">
        <div class="col-md-6">
            @Html.Awe().LookupFor(m => m.CellId).GetItemUrl(Url.Action("GetItem","CellLookup")).SearchUrl(Url.Action("Search","CellLookup")).Parent("pcfId", "pcfId").HtmlAttributes(new{@class="form-control"})
            @Html.ValidationMessageFor(m => m.CellId)
        </div>
    </div>
</div>